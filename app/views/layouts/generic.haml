%html{html_attrs('en-US'), class: Rails.env}
  %head
    %title= @pagetitle.nil? ? "turkopticon." : "turkopticon : " + @pagetitle
    = stylesheet_link_tag 'generic'
    %meta{:name => "google-site-verification", :content => "UWLKIWNd0faYwT10vzkBZI5wvuQpuRtiEcZh9ZiMsBM"}
  %body
    #login_nav= render :partial => 'layouts/login_nav'
    = link_to content_tag(:div, nil, id: 'header'), controller: 'main', action: 'info'
    #nav= render :partial => 'layouts/nav'
    #content
      #flash_messages
        - if flash[:success]
          .success= flash[:success].html_safe
        - if flash[:notice]
          .notice= flash[:notice].html_safe
        - if flash[:warning]
          .warning= flash[:warning].html_safe
        - if flash[:error]
          .error= flash[:error].html_safe
      = yield
    #footer
      Comments, questions, issues? Please check the <a href='/faq/index.html'>frequently asked questions</a> page first. If your question isn't addressed there, please email us at <a href="mailto:info@turkopticon.net">info@turkopticon.net</a>.
      %br/
      %br/
      %br/
      = link_to "Data Use Policy", :controller => "main", :action => "data_use_policy"

<script type="text/javascript">
var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
</script>
<script type="text/javascript">
try {
var pageTracker = _gat._getTracker("UA-4254808-5");
pageTracker._trackPageview();
} catch(err) {}</script>
